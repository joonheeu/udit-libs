{
  "name": "@udit-org/logger",
  "version": "0.1.0",
  "description": "A flexible logging utility for JavaScript and TypeScript projects with context support and error handling",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{ts,js,json}\""
  },
  "keywords": [
    "logger",
    "logging",
    "log",
    "typescript",
    "javascript",
    "context",
    "error-handling"
  ],
  "author": "UDIT",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/udit/udit-libs.git",
    "directory": "packages/logger"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^24.10.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}
